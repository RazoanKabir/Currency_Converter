<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RadioButton
        android:id="@+id/rbSelectCurrencyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#19bc5b"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSelectCurrencyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        tools:text="currency"
        app:layout_constraintBottom_toBottomOf="@+id/rbSelectCurrencyType"
        app:layout_constraintStart_toEndOf="@+id/rbSelectCurrencyType"
        app:layout_constraintTop_toTopOf="@+id/rbSelectCurrencyType" />

</androidx.constraintlayout.widget.ConstraintLayout>